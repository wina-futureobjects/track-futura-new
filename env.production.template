# Production Environment Variables
# Copy this file to .env.production and customize for production deployment

# Django Settings
DEBUG=0
DJANGO_SETTINGS_MODULE=config.settings
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-KEY-IN-PRODUCTION
ALLOWED_HOSTS=your-domain.com,localhost,127.0.0.1,frontend,backend

# Database (PostgreSQL for production)
DATABASE_URL=postgresql://track_futura_user:CHANGE-THIS-PASSWORD@db:5432/track_futura
POSTGRES_DB=track_futura
POSTGRES_USER=track_futura_user
POSTGRES_PASSWORD=CHANGE-THIS-PASSWORD

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# React Environment Variables
REACT_APP_API_URL=https://your-domain.com/api
REACT_APP_BACKEND_URL=https://your-domain.com
VITE_API_URL=https://your-domain.com/api

# BrightData Configuration
BRIGHTDATA_API_KEY=your-production-brightdata-api-key
BRIGHTDATA_API_URL=https://api.brightdata.com

# Email Configuration (production - use real SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-smtp-user
EMAIL_HOST_PASSWORD=your-smtp-password

# Security Settings (production)
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Logging
LOG_LEVEL=INFO

# Session Security
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True 