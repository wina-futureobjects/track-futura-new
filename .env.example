# TrackFutura Environment Variables
# Copy this file to .env and fill in your actual values

# Django Settings
DJANGO_SETTINGS_MODULE=config.settings
SECRET_KEY=your-secret-key-here
DEBUG=False

# Database Configuration (for local development)
DATABASE_NAME=trackfutura
DATABASE_USER=postgres
DATABASE_PASSWORD=your-db-password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Security Settings
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,.yourdomain.com
DJANGO_CSRF_TRUSTED_ORIGINS=https://.yourdomain.com,http://localhost:3000

# API Keys and External Services
APIFY_API_TOKEN=your-apify-api-token-here
OPENAI_API_KEY=your-openai-api-key-here
PINECONE_API_KEY=your-pinecone-api-key-here
BRIGHTDATA_API_KEY=your-brightdata-api-key-here
BRIGHTDATA_WEBHOOK_TOKEN=your-brightdata-webhook-token-here

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Development Settings
LOAD_INITIAL_DATA=false