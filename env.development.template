# Development Environment Variables
# Copy this file to .env for local development

# Django Settings
DEBUG=1
DJANGO_SETTINGS_MODULE=config.settings
SECRET_KEY=dev-secret-key-change-for-production
ALLOWED_HOSTS=localhost,127.0.0.1,frontend,backend,0.0.0.0

# Database (SQLite for development)
# DATABASE_URL=sqlite:///db.sqlite3

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:80,http://frontend

# React Environment Variables
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_BACKEND_URL=http://backend:8000
VITE_API_URL=http://localhost:8000/api

# BrightData Configuration (get from team lead)
BRIGHTDATA_API_KEY=your-brightdata-api-key-here
BRIGHTDATA_API_URL=https://api.brightdata.com

# Email Configuration (development - console backend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Security Settings (development)
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=SAMEORIGIN

# Logging
LOG_LEVEL=DEBUG

# Development Tools
DJANGO_EXTENSIONS_ENABLED=1 